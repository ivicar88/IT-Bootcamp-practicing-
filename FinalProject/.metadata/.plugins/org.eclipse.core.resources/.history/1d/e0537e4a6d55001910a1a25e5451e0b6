package test;

import java.util.concurrent.TimeUnit;

import org.openqa.selenium.WebDriver;
import org.openqa.selenium.chrome.ChromeDriver;

import page.Post;
import page.testing.Registration;



public class Testiranje {

	public static void main(String[] args) {
		WebDriver driver = new ChromeDriver();
		driver.manage().window().maximize();
		driver.manage().timeouts().implicitlyWait(5, TimeUnit.SECONDS);
		
		try {
			page.Home.openHomePage(driver);
			Thread.sleep(500);
			page.testing.Login.loginForm(driver);
			Thread.sleep(500);
			Post.clickNewPostButton(driver);
			Thread.sleep(500);
			Post.clickPostName(driver);
			Thread.sleep(500);
			Post.sendDataPostName(driver, "Test");
			Thread.sleep(500);
			Post.clickPostLocation(driver);
			Thread.sleep(500);
			Post.sendDataPostLocation(driver, "Tara");
			Thread.sleep(500);
			Post.getSelectDropbutton(driver);
			Thread.sleep(500);
			Post.selectDropButton(driver, "Car");
			Thread.sleep(500);
			Post.clickDescription(driver);
			Thread.sleep(500);
			Post.sendDataDescription(driver, "Tamo daleko");
			Thread.sleep(500);
			Post.findPostButton(driver);
			Post.clickPostButton(driver);
			
		} catch (Exception ex) {
			ex.toString();
		} finally {
			driver.quit();
		}
		
		
	}

}
